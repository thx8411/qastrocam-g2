CXXFLAGS=@CXXFLAGS@
LDFLAGS=@LDFLAGS@

MOC=@MOC@
QT_LDADD=-L@QT_LIB_DIR@
QT_CXXFLAGS=-I@QT_INC_DIR@
LIBS+=@LIBS@ @QT_LIBS@

CFITSIO_LINK=@CFITSIO_LINK@
CFITSIO_INC=@CFITSIO_INC@

CXXFLAGS+=$(QT_CXXFLAGS) $(CFITSIO_INC)
